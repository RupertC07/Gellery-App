<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
  
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

    <link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/2.0.1/css/toastr.css" rel="stylesheet"/>
    <link rel="stylesheet" href="styles/pthotoG.css">

    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Rounded:opsz,wght,FILL,GRAD@48,400,0,0" />
   
    
   
    <title><%= title %></title>
</head>
<body>

    <style>
 


    </style>
   

    <div class="container">
      <div class="row">
        <div class="col-md-12">
            <div class="card card-custom ">
                <div class="card-body card-custom ">

                    <div class="row">
                        <div class="col-md-10 ">

                            <div class="card inner-card">
                                <div class="card-body pd-40 inner-card " id="inner-card">

                                    <div class="custom-card-header" style="display: flex; justify-content: space-between;">

                                        <div class="div">
                                            <h1 class="text-capitalized fw-bolder " id="title">PhotoGallery <span class="material-symbols-rounded" id="up-btn" data-bs-toggle="modal" data-bs-target="#uploadModal">
                                                add_photo_alternate</h1>

                                        </div>

                                        <div>
                                            <nav aria-label="Page navigation example">
                                                <ul class="pagination">
                                                  <li class="page-item">
                                                    <a class="page-link btn-links" href="<%=prev_link%>" aria-label="Previous">
                                                      <span aria-hidden="true"><b>&laquo;</b></span>
                                                    </a>
                                                  </li>
                                                  <li class="page-item "><a class="page-link  btn-links" href="#"><b>Page <%=page%> of <%=totalPage%></b></a></li>
                                                    <a class="page-link btn-links" href="<%=next_link %>" onclick="" aria-label="Next">
                                                      <span aria-hidden="true"><b>&raquo;</b></span>
                                                    </a>
                                                  </li>
                                                </ul>
                                              </nav>
                                        </div>
                                        

                                    </div>
                                    

                                    <div class="row d-flex">

                                      <%

                                      if(uploads.length ==0){

                                      
                                      %>

                                  
                                      <div class="row">

                                        <div class="col-md-12 d-flex justify-content-center text-center">
                                         <br>
                                        </div>

                                      </div>
                                      <div class="row">

                                        <div class="col-md-12 d-flex justify-content-center text-center">
                                         <br>
                                        </div>

                                      </div>
                                      <div class="row">

                                        <div class="col-md-12 d-flex justify-content-center text-center">
                                          <br>
                                        </div>

                                      </div>
                                      <div class="row">

                                        <div class="col-md-12 d-flex justify-content-center text-center">
                                          <br>
                                        </div>

                                      </div>
                                      <div class="row">

                                        <div class="col-md-12 d-flex justify-content-center text-center">
                                          <h4 class="text-bold">NO AVAILABLE IMAGE</h4>
                                        </div>

                                      </div>

                                      

                                      <% } %>


                                      <% uploads.forEach(image => { %>

                                        <div class="col-md-4" data-bs-toggle="modal" onclick="getDetails('<%= image.id %>')" data-bs-target="#exampleModal">
                                          <div class="image-container">
                                              <img src="<%=image.upload_path%>" alt="Image" class="image">
                                              <div class="overlay">
                                                <div class="overlay-content">

                                                 

                                                  <div class="content-text">
                                                      <h3><%= image.caption %></h3>
                                                      
                                                  </div>
                                                  <div class="d-flex justify-content-center" style="align-items: center;"> 
                                                      <p><%= image.date.toISOString().slice(0, 10) %>
                                                      </p>
                                                      
                                                  </div>
                                                </div>
                                              </div>
                                            </div>
                                      </div>
                                     <% });%>


                                       
                                     
                                        
                                       
                                        
                                       
                                        
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>


    <!-- Button trigger modal -->

  
  <!-- Modal -->
  <div class="modal fade"  id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" >
      <div class="modal-content" style=" background-color: rgb(255, 254, 255);">
        
        <div class="modal-body" >
          <div class="row">
              <br>
              <div class="col-md-1"></div>
              <div class="col-md-10 d-flex justify-content-center">

                <div class="card-body card-img-preview">

                  <img src="" alt="Your Image here" class="ImageUp" id="uploadedImage" >
                  
      
                </div>
            
              </div>
              <div class="col-md-1"></div>
            </div>
            <br>
            <div class="row">
              <div class="col-md-1"></div>
              <div class="col-md-10">
                <form action="/updateUpload" method="post" id="formUpdate">
                <div class="form-group">
                  <input type="text" class="form-control" id="newCaption" name="newCaption" placeholder="Your caption" required>
                  <input type="text" class="form-control" id="" value="<%= page %>" style="display: none;" name="page">
                </div>
              </div>
              <div class="col-md-1"></div>
            </div>
            <br>
            
            <div class="row" style="display: none;">
              <div class="col-md-1"></div>
              <div class="col-md-10">
                <div class="form-group">
                  <input type="text" class="form-control" id="uploadId" name="uploadId" placeholder="Your caption" required>
                </div>
              </div>
              <div class="col-md-1"></div>
            </div>
        </div>
        </form>
        <div class="modal-footer d-flex" style="justify-content: space-between;">

          <form action="/deleteUpload"  method="POST"style="display: none;" id="formDelete">
            <input type="text" name="id" id="rem_id">
          
          </form>
          
          <div>
             <button type="button" class="btn btn-outline-danger"  id="submitForm2" style="border-radius: 50px;  padding-top: 10px;" data-bs-dismiss="modal"><span class="material-symbols-rounded">
            delete
            </span></button>
          </div>

          <div>
            <button type="button" class="btn btn-outline-success "  id="submitForm1"  onclick="navigateToPage()" style="border-radius: 50px; padding-top: 10px;"><span class="material-symbols-rounded">
            done
            </span></button>
          </div>

         
          
          
        </div>
      </div>
    </div>
  </div>

  <div class="modal fade"  id="uploadModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" >
      <div class="modal-content" style=" background-color: rgb(255, 254, 255);">

        <div class="modal-header">
          
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        
        <div class="modal-body" >

          <form action="/upload" method="post" id="formUpload" enctype="multipart/form-data">

            
            <div class="row">
              <br>
              <div class="col-md-1"></div>
              <div class="col-md-10 d-flex justify-content-center">

                <div class="card-body card-img-preview">

                  <img src="" alt="Your Image here" class="ImageUp" id="ImagePreview" style="display: none;">
                  <h6 id="imageText">YOUR IMAGE HERE</h6>
      
                </div>
            
              </div>
              <div class="col-md-1"></div>
            </div>

            <br>

            <div class="row">
              <div class="col-md-1"></div>
              <div class="col-md-10">

                <div class="form-group">

                  <input type="file" class="form-control" id="image-input" accept="image/png, image/gif, image/jpeg" name="imageToUpload" required>
      
                </div>

                <br>

                <div class="form-group">

                  <input type="text" class="form-control" maxlength="50" title="only 50 characters allowed" placeholder="your caption " name="caption" required>
      
                </div>
            
              </div>
              <div class="col-md-1"></div>
            </div>

        
       
            
        
        </div>
        <div class="modal-footer d-flex justify-content-center ">
          
          
          <button type="submit" class="btn btn-outline-success" style="border-radius: 30px; width: 200px;">Upload </button>

        </form>
        </div>
      </div>
    </div>
  </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.0/jquery.min.js" integrity="sha512-3gJwYpMe3QewGELv8k/BX9vcqhryRdzRMxVfq6ngyWXwo03GFEzjsUm8Q7RZcHPHksttq7/GFoxjCVUjkjvPdw==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
 
  <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/2.0.1/js/toastr.js"></script>
 
  <script src="js/pg.js"></script>

  <script>
   
  </script>

  <% 

  if(uploadMessage == "uploaded") {

  
  
  %>

  <script>
    //alert('image uploaded');
    
    toastr.success('New Collection added', 'UPLOAD SUCCESS');
    navigateToPage()

  </script>

  <%

  }
  else if (uploadMessage == "uploadfailed") 
  {

  
  
  %>

  <script>
    toastr.error('Internal Error Occur', 'FAILED TO UPLOAD');
    navigateToPage()

  </script>

  <%

  }
  else if  (uploadMessage == "fileError") {


  

  
  
  %>

  <script>
    toastr.error('Invalid file type', 'FAILED TO UPLOAD');
    navigateToPage()

  </script>

  <%

  }

  else if  (uploadMessage == "sizeError") {


  

  
  
    %>
  
    <script>
      toastr.error('File is too big', 'FAILED TO UPLOAD');
      navigateToPage()
  
    </script>

    
<%
  }

  else if  (uploadMessage == "updatefailed") {


  

  
  
    %>
  
    <script>
      toastr.error('Internal Error Occur', 'FAILED TO UPDATE');
      navigateToPage()
  
    </script>

    <%

  }
  else if  (uploadMessage == "updatesuccess") {


  

  
  
    %>
  
    <script>
      toastr.success('Your caption is updated', 'UPDATED SUCCESSFULLY');
      navigateToPage()
  
    </script>

    <%

  }

  else if  (uploadMessage == "deletesuccess") {


  

  
  
    %>
  
    <script>
      toastr.success('Collection has been removed', 'REMOVED SUCCESSFULLY');
      navigateToPage()
  
    </script>

  <%
  }

  else if  (uploadMessage == "deletefailed") {


  

  
  
    %>
  
    <script>
      toastr.error('Internal Error Occur', 'FAILED TO REMOVE');
      navigateToPage()
  
    </script>

    <% 
  }
  
  
  
  
  %>






</body>
</html>